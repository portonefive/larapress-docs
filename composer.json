{
    "name": "larapress/larapress",
    "description": "The LaraPress framework. A framework for WordPress developers.",
    "keywords": [
        "larapress",
        "framework",
        "WordPress"
    ],
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Julien LambÃ©",
            "email": "julien@larapress.com",
            "homepage": "http://www.larapress.com/"
        }
    ],
    "type": "project",
    "repositories": [
        {
            "type": "composer",
            "url": "http://wpackagist.org"
        },
        {
            "type": "vcs",
            "url": "https://github.com/portonefive/larapress"
        },
        {
            "type": "vcs",
            "url": "https://github.com/portonefive/theme"
        },
        {
            "type": "vcs",
            "url": "https://github.com/portonefive/framework"
        }
    ],
    "config": {
        "preferred-install": "dist"
    },
    "require": {
        "php": ">=5.4",
        "johnpbloch/wordpress": ">=4.1",
        "larapress/framework": "dev-master",
        "larapress/theme": "dev-master",
        "raveren/kint": "0.9.*",
        "illuminate/support": "~5.0",
        "illuminate/database": "~5.0",
        "vlucas/phpdotenv": "~1.1",
        "illuminate/config": "~5.0",
        "symfony/finder": "~2.6"
    },
    "extra": {
        "installer-paths": {
            "public/content/mu-plugins/{$name}/": ["larapress/framework"],
            "public/content/plugins/{$name}/": ["type:wordpress-plugin"],
            "public/content/themes/{$name}/": ["larapress/theme"],
            "public/content/themes/{$name}/": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "public/cms"
    }
}
